{
    "extends": [
        "@rocketseat/eslint-config/node",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "jest"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "tabWidth": 2,
                "singleQuote": true,
                "trailingComma": "none",
                "arrowParens": "always",
                "semi": false
            }
        ]
    }
}